{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [{
        "source": "**/*.@(png|webmanifest|woff|woff2)",
        "headers": [{
          "key": "Cache-Control",
          "value": "cache-control: public,max-age=31536000,immutable"
        }]
      },
      {
        "source": "**/*.@(js)",
        "headers": [{
          "key": "Cache-Control",
          "value": "max-age=0"
        }]
      }
    ]
  }
}
